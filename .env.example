# PAR(2) Discovery Engine - Environment Configuration
# Copy this file to .env.local for local development

# ============================================================
# STORAGE CONFIGURATION
# ============================================================

# Storage mode: 'sqlite' for local/offline, 'postgres' for cloud
# Default: sqlite (no database server required)
STORAGE_MODE=sqlite

# SQLite database path (used when STORAGE_MODE=sqlite)
# The database file will be created automatically
SQLITE_PATH=./data/local/par2.db

# PostgreSQL connection URL (used when STORAGE_MODE=postgres)
# Example: postgresql://user:password@localhost:5432/par2
# Leave empty for SQLite mode
# DATABASE_URL=

# ============================================================
# SERVER CONFIGURATION
# ============================================================

# Server port (default: 5000)
PORT=5000

# Server host (use 0.0.0.0 for Docker, localhost for local dev)
HOST=0.0.0.0

# Node environment: development, production
NODE_ENV=development

# ============================================================
# ANALYSIS CONFIGURATION (Optional)
# ============================================================

# Default circadian period in hours
DEFAULT_PERIOD=24

# Default significance threshold (p-value)
DEFAULT_THRESHOLD=0.05

# ============================================================
# NOTES
# ============================================================

# For local development:
#   1. Copy this file to .env.local
#   2. Leave STORAGE_MODE=sqlite for offline use
#   3. Run: npm run dev

# For production/cloud:
#   1. Set STORAGE_MODE=postgres
#   2. Set DATABASE_URL to your PostgreSQL connection string
#   3. Run: npm run build && npm start
